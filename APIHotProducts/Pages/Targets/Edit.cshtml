                    <span asp-validation-for="Target.WCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Target.WLotNum" class="control-label"></label>
                    <input asp-for="Target.WLotNum" class="form-control" />
                    <span asp-validation-for="Target.WLotNum" class="text-danger"></span>
