@model APIHotProducts.Pages.Targets.EditModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update Target Status</h1>

<h4>Click on what you want to update about this target</h4>
<hr />
<div>
    <button onclick="displayWarehouse()">Update Warehose Information</button>
    <button onclick="displayCyclotronS()">Update Cyclotron Spares Information</button>
    <button onclick="displayChemistry1()">Update Chemistry 1 Information</button>
    <button onclick="displayBombarding()">Update Bombarding Information</button>
    <button onclick="displayChemistry2()">Update Chemistry 2 Information</button>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Target.ID" />
            <div class="form-group">
                <label asp-for="Target.Product" class="control-label"></label>
                <select asp-for="Target.Product" class="form-control" id="product">
                    <option value="Ga-67">Ga-67</option>
                    <option value="In-111">In-111</option>
                    <option value="Pb-201">Pb-201</option>
                    <option value="Ge-68">Ge-68</option>
                    <option value="Cu-64">Cu-64</option>
                    <option value="N/A">N/A</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Target.Status" class="control-label"></label>
                <select asp-for="Target.Status" class="form-control" id="status">
                    <option value="Warehouse">Warehouse</option>
                    <option value="Cyclotron Spares">Cyclotron</option>
                    <option value="Chemistry Lab 1">Chemistry Lab 1</option>
                    <option value="Bombarding">Bombarding</option>
                    <option value="Chemistry Lab 2">Chemistry Lab 2</option>
                </select>
            </div>
            <hr>
            @* Warehouse Data Fields *@
            <div id="Warehouse" style="display:none;">
                <h3>Edit Target in Warehouse information:</h3>
