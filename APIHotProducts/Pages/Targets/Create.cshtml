@model APIHotProducts.Pages.Targets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Target</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Target.Product" class="control-label"></label>
                <input asp-for="Target.Product" class="form-control" id="product"/>
                <span asp-validation-for="Target.Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Target.Code" class="control-label"></label>
                <input asp-for="Target.Code" class="form-control" />
                <span asp-validation-for="Target.Code" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Target.LotNum" class="control-label"></label>
                <input asp-for="Target.LotNum" class="form-control" />
                <span asp-validation-for="Target.LotNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Target.TargetType" class="control-label"></label>
                <input asp-for="Target.TargetType" class="form-control" />
                <span asp-validation-for="Target.TargetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Target.Date" class="control-label"></label>
                <input asp-for="Target.Date" class="form-control" />
                <span asp-validation-for="Target.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Target.Description" class="control-label"></label>
                <input asp-for="Target.Description" class="form-control" id="description"/>
                <span asp-validation-for="Target.Description" class="text-danger"></span>
            </div>
            <div class="form-group" style=" margin: 10px !important">
                <label asp-for="Target.Status" class="control-label"></label>
                <select asp-for="Target.Status" class="form-control">
                    <option value="Warehouse">Warehouse</option>
                    <option value="Cyclotron Spares">Cyclotron Spares</option>
                </select>
            </div>
            <hr>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

