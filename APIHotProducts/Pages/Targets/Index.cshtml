@page
@model APIHotProducts.Pages.Targets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <div class="d-flex">
            Search By Code: <input asp-for="SearchString" class="form-control me-sm-2" type="text" />
            <input class="btn btn-secondary my-2 my-sm-0" type="submit" value="Filter" />
        </div>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ProductSort">
                @Html.DisplayNameFor(model => model.Target[0].Product)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CodeSort">Code</a>
            </th>
            <th>
                Lot Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Target[0].Status)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">Date</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Target) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WCode)<br>
                @Html.DisplayFor(modelItem => item.CCode)<br>
                @Html.DisplayFor(modelItem => item.C1Code)<br>
                @Html.DisplayFor(modelItem => item.BCode)<br>
                @Html.DisplayFor(modelItem => item.C2Code)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WLotNum)<br>
                @Html.DisplayFor(modelItem => item.CLotNum)<br>
                @Html.DisplayFor(modelItem => item.C1LotNum)<br>
                @Html.DisplayFor(modelItem => item.BLotNum)<br>
                @Html.DisplayFor(modelItem => item.C2LotNum)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)<br>
                @Html.DisplayFor(modelItem => item.CDate)<br>
                @Html.DisplayFor(modelItem => item.C1Date)<br>
                @Html.DisplayFor(modelItem => item.BDate)<br>
                @Html.DisplayFor(modelItem => item.C2Date)<br>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
