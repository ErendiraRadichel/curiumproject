@page
@model APIHotProducts.Pages.Targets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin: 30px !important;">Index</h1>

<p style="margin: 30px !important;">
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<form style="margin: 30px !important;">
    <p>
        <div class="d-flex">
            Search By Code:   <input asp-for="SearchString" class="form-control" type="text" />
            <input class="btn btn-secondary" type="submit" value="Filter" />
        </div>
    </p>
</form>
<table class="table table-hover extramarginsite" style="margin: 30px !important;">
    <thead>
        <tr>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.StatusSort">
                    @Html.DisplayNameFor(model => model.Target[0].Status)
                </a>
            </th>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.TargetTypeSort">
                    @Html.DisplayNameFor(model => model.Target[0].TargetType)
                </a>
            </th>
             <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.ProductSort">
                    @Html.DisplayNameFor(model => model.Target[0].ProductName)
                </a>
            </th>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.TargetNumSort">
                    @Html.DisplayNameFor(model => model.Target[0].TargetNum)
                </a>
            </th>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.WCodeSort">Warehouse Code</a>
            </th>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.PCodeSort">Plating Code</a>
            </th>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.WLotNumSort">Warehouse Lot Number</a>
            </th>
            <th>
                <a class="text-decoration-none" asp-page="./Index" asp-route-sortOrder="@Model.PLotNumSort">Plating Lot Number</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Target) {
        <tr class="table-active">
            <td>
                @Html.DisplayFor(modelItem => item.Status)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.TargetNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarehouseCode)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlatingCode)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarehouseLotNum)<br>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlatingLotNum)<br>
            </td>
            <td>
                <a class="badge rounded-pill bg-primary text-decoration-none" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>  |
                <a class="badge rounded-pill bg-primary text-decoration-none" style="padding-left: 10px !important;" asp-page="./Details" asp-route-id="@item.ID">Details</a>  |
                <a class="badge rounded-pill bg-primary text-decoration-none" style="padding-left: 10px !important;" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
