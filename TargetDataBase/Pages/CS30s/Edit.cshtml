@page
@model TargetDataBase.Pages.CS30s.EditModel

@{
    ViewData["Title"] = "Update CS-30 Target";
}

<h1 class="text-center" style="margin-top: 30px !important;">Update CS-30 Target Information</h1>
<div style="margin: 30px 0 50px 0 !important;" class="text-center text-success">
    <h2>Current Target Status: @Html.DisplayFor(model => model.CS30.Status)</h2>
</div>
<h4 class="text-center" style="margin-top: 50px !important;" >Click on what you want to update about this target</h4>
<div class="d-flex" style="margin: 10px 0 30px 0 !important;">
    <button class="btn btn-primary" style="margin: 5px !important;" onclick="displayWarehouse()">Update Warehose Information</button>
    <button class="btn btn-secondary" style="margin: 5px !important;" onclick="displayCyclotronS()">Update Cyclotron Spares Information</button>
    <button class="btn btn-success" style="margin: 5px !important;" onclick="displayChemistry1()">Update Chemistry: Plating Information</button>
    <button class="btn btn-info" style="margin: 5px !important;" onclick="displayBombarding()">Update Bombarding Information</button>
    <button class="btn btn-light" style="margin: 5px !important;" onclick="displayChemistry2()">Update Chemistry: Processing Information</button>
</div>

<div class="text-center">
    <a class="btn btn-warning" style="margin: 5px !important;" asp-page="/CS30Tests/Create">Add JIG Test</a>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CS30.ID" />
            <div class="form-group">
                <h4 class="text-center" style="margin-top: 20px !important;">Update Target Status</h4>
                <select asp-for="CS30.Status" class="form-control" style="margin: 10px !important;" id="status">
                    <option value="Warehouse">Warehouse</option>
                    <option value="Cyclotron Spares">Cyclotron Spares</option>
                    <option value="Plating">Plating</option>
                    <option value="Bombarding">Bombarding</option>
                    <option value="Processing">Processing</option>
                </select>
            </div>
            @* Warehouse Data Fields *@
            <div id="Warehouse" style="display:none; margin: 20px !important;">
                <hr>
                <h3 class="text-center" style="margin: 10px 0 10px 0 !important;" >Edit Target in Warehouse:</h3>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.TargetType" class="control-label"></label>
                    <select style="margin-bottom: 10px !important;" asp-for="CS30.TargetType" class="form-control" id="product">
                        <option value="Curve">Curve</option>
                        <option value="Flat">Flat</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.WarehouseDate" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.WarehouseDate" class="form-control" />
                    <span asp-validation-for="CS30.WarehouseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" class="control-label">Who did this change? (First Name & Last Name Initials)</label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.WarehouseName" class="form-control" />
                    <span asp-validation-for="CS30.WarehouseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.WarehouseCode" class="control-label"></label>
                    <select asp-for="CS30.WarehouseCode" class="form-control" id="WCode" style="margin-bottom: 10px !important;">
                        <option value="J54701">Curve-J54701</option>
                        <option value="G000271">Flat-6000271</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.WarehouseLotNum" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.WarehouseLotNum" class="form-control" />
                    <span asp-validation-for="CS30.WarehouseLotNum" class="text-danger"></span>
                </div>
            </div>
            @* Cyclotron Spares Data Fields *@
            <div id="CyclotronSpares" style="display:none; margin: 20px !important;">
                <hr>
                <h3 class="text-center" style="margin: 10px 0 10px 0 !important;">Edit Target in Cyclotron Spares:</h3>
                <div class="form-group">
                    <p><b>Lot Number: </b>@Html.DisplayFor(model => model.CS30.WarehouseLotNum)</p>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.CyclotronDate" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.CyclotronDate" class="form-control" />
                    <span asp-validation-for="CS30.CyclotronDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.CyclotronName" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.CyclotronName" class="form-control" />
                    <span asp-validation-for="CS30.CyclotronName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.CyclotronCode" class="control-label"></label>
                    <select asp-for="CS30.CyclotronCode" class="form-control" id="WCode" style="margin-bottom: 10px !important;">
                        <option value="J54701">Curve-J54701</option>
                        <option value="Gold-G00010">Gold-600010</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.Quantity" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.Quantity" class="form-control" />
                    <span asp-validation-for="CS30.Quantity" class="text-danger"></span>
                </div>
            </div>
            @* Chemistry:Plating Data Fields *@
            <div id="Chemistry1" style="display:none; margin: 20px !important;">
                <hr>
                <h3 class="text-center" style="margin: 10px 0 10px 0 !important;">Edit Target in Plating:</h3>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.PlatingDate" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.PlatingDate" class="form-control" />
                    <span asp-validation-for="CS30.PlatingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.PlatingName" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.PlatingName" class="form-control" />
                    <span asp-validation-for="CS30.PlatingName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.PlatingLotNum" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.PlatingLotNum" class="form-control" />
                    <span asp-validation-for="CS30.PlatingLotNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.ProductName" class="control-label"></label>
                    <select style="margin-bottom: 10px !important;" asp-for="CS30.ProductName" class="form-control" id="product">
                        <option value="In-111">In-111</option>
                        <option value="Ga-67">Ga-67</option>
                        <option value="Cu-64">Cu-64</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.PlatingCode" class="control-label"></label>
                    <select style="margin-bottom: 10px !important;" asp-for="CS30.PlatingCode" class="form-control" id="product">
                        <option value="S790">Curved S790</option>
                        <option value="S732">Curved S732</option>
                        <option value="S217">Flat S217</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.TargetNum" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.TargetNum" class="form-control" />
                    <span asp-validation-for="CS30.TargetNum" class="text-danger"></span>
                </div>
            </div>
             @* Cyclotron Bombarding Data Fields *@
             <div id="Bombarding" style="display:none; margin: 20px !important;">
                <hr>
                <h3 class="text-center" style="margin: 10px 0 10px 0 !important;">Edit Target in Bombarding information:</h3>
                <div class="form-group" style="margin: 10px 0 10px 0 !important;">
                    <p><b>Product Name: </b>@Html.DisplayFor(model => model.CS30.ProductName)</p>
                    <p><b>Lot Number: </b>@Html.DisplayFor(model => model.CS30.PlatingLotNum)</p>
                    <p><b>Code: </b>@Html.DisplayFor(model => model.CS30.PlatingCode)</p>
                    <p><b>Target Number: </b>@Html.DisplayFor(model => model.CS30.TargetNum)</p>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.BombardingDate" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.BombardingDate" class="form-control" />
                    <span asp-validation-for="CS30.BombardingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.BombardingName" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.BombardingName" class="form-control" />
                    <span asp-validation-for="CS30.BombardingName" class="text-danger"></span>
                </div>
            </div>
            @* Chemistry: Processing Data Fields *@
            <div id="Chemistry2" style="display:none; margin: 20px !important;">
                <hr>
                <h3 class="text-center" style="margin: 10px 0 10px 0 !important;">Edit Target in Processing:</h3>
                <div class="form-group" style="margin: 10px 0 10px 0 !important;">
                    <p><b>Product Name: </b>@Html.DisplayFor(model => model.CS30.ProductName)</p>
                    <p><b>Code: </b>@Html.DisplayFor(model => model.CS30.PlatingCode)</p>
                    <p><b>Lot Number: </b>@Html.DisplayFor(model => model.CS30.PlatingLotNum)</p>
                    <p><b>Target Number: </b>@Html.DisplayFor(model => model.CS30.TargetNum)</p>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.ProcessingDate" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.ProcessingDate" class="form-control" />
                    <span asp-validation-for="CS30.ProcessingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.ProcessingName" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.ProcessingName" class="form-control" />
                    <span asp-validation-for="CS30.ProcessingName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px !important;" asp-for="CS30.ProcessingLotNum" class="control-label"></label>
                    <input style="margin-bottom: 10px !important;" asp-for="CS30.ProcessingLotNum" class="form-control" />
                    <span asp-validation-for="CS30.ProcessingLotNum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center" style="margin: 40px !important;" >
                <h3 class="text-warning" style="margin: 10px !important;" >Save your changes!</h3>
                <input type="submit" value="Save" class="btn btn-primary btn-lg col-sm-10" />
            </div>
        </form>
    </div>
</div>
<div class="text-center" >
    <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
