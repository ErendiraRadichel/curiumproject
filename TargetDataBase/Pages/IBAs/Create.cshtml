@page
@model TargetDataBase.Pages.IBAs.CreateModel

@{
    ViewData["Title"] = "Create IBA Target";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>
<div class="row justify-content-center m-5">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IBA.Status" class="control-label"></label>
                <input asp-for="IBA.Status" value="Warehouse" class="form-control mb-2" readonly />
            </div>
            @* Warehouse Data Fields *@
            <div class="form-group">
                <label asp-for="IBA.WarehouseDate" class="control-label mt-3"></label>
                <input asp-for="IBA.WarehouseDate" class="form-control mb-2"/>
                <span asp-validation-for="IBA.WarehouseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IBA.WarehouseName" class="control-label mt-3"></label>
                <input asp-for="IBA.WarehouseName" class="form-control mb-2"/>
                <span asp-validation-for="IBA.WarehouseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IBA.WarehouseCode" class="control-label mt-3"></label>
                <select asp-for="IBA.WarehouseCode" class="form-control mb-2" id="WCode">
                    <option value="J54600">J54600</option>
                    <option value="H38300">H38300</option>
                    <option value="H98300">H98300</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IBA.WarehouseLotNum" class="control-label mt-3"></label>
                <input asp-for="IBA.WarehouseLotNum" class="form-control mb-2"/>
                <span asp-validation-for="IBA.WarehouseLotNum" class="text-danger"></span>
            </div>
            <div class="form-group text-center m-3">
                <input type="submit" value="Create" class="btn btn-primary col-sm-10" />
            </div>
        </form>
    </div>
</div>
<div class="text-center mb-4">
    <a class="btn btn-outline-primary" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
